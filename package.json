{
  "name": "@favware/ribbon",
  "version": "11.0.0",
  "description": "feature rich, modular Discord.JS + Klasa server bot",
  "author": "@favware",
  "license": "MIT",
  "private": true,
  "main": "./dist/app.js",
  "homepage": "https://favware.tech/ribbon",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favna/ribbon.git"
  },
  "bugs": {
    "url": "https://github.com/favna/ribbon/issues"
  },
  "scripts": {
    "lint": "eslint src --fix --ext ts",
    "clean": "rimraf ./dist tsconfig.tsbuildinfo",
    "prebuild": "yarn lint",
    "build": "tsc",
    "postbuild": "yarn copyfiles",
    "start": "yarn build && cross-env NODE_ENV=development node ./dist/app.js",
    "serve": "pm2 start pm2.ecosystem.yml --env production",
    "serve:dev": "pm2 start pm2.ecosystem.yml",
    "copyfiles": "run-p copyfiles:**",
    "copyfiles:fonts": "copyfiles -u 1 ./src/data/fonts/* ./dist",
    "copyfiles:databases": "copyfiles -u 1 ./src/data/*.sqlite ./dist",
    "copyfiles:env": "copyfiles -u 1 ./src/.env ./dist",
    "copyfiles:dex": "copyfiles -u 1 ./src/data/dex/*.json ./dist",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive --latest",
    "release:version": "standard-version",
    "release:push": "git push --follow-tags origin master",
    "scripts:runner": "node -r esm -r ts-node/register",
    "scripts:reload": "yarn scripts:runner src/lib/scripts/reloader",
    "ci:build": "tsc"
  },
  "keywords": [
    "bot",
    "discord",
    "discord.js",
    "klasa",
    "Favna",
    "NodeJS",
    "TypeScript",
    "Ribbon"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "dependencies": {
    "@favware/converter": "^1.2.2",
    "@favware/querystring": "^4.1.2",
    "@favware/unescape": "^1.1.2",
    "@favware/zalgo": "^1.1.2",
    "array-flat-polyfill": "^1.0.1",
    "booru": "^2.0.3",
    "cheerio": "^1.0.0-rc.3",
    "common-tags": "^1.8.0",
    "didyoumean2": "^3.1.2",
    "discord.js": "favna/discord.js#ribbon-djs",
    "dotenv": "^8.1.0",
    "emoji-regex": "^8.0.0",
    "fast-levenshtein": "^2.0.6",
    "firebase-admin": "8.6.0",
    "fs-nextra": "^0.4.5",
    "fuse.js": "^3.4.5",
    "jimp": "0.7.0",
    "klasa": "dirigeants/klasa#settings",
    "libsodium-wrappers": "^0.7.5",
    "module-alias": "^2.2.2",
    "moment": "^2.24.0",
    "moment-duration-format": "^2.3.2",
    "node-fetch": "^2.6.0",
    "qrcode": "^1.4.2",
    "reflect-metadata": "^0.1.13",
    "sagiri": "^2.0.2",
    "slot-machine": "^2.1.0",
    "speedtest-net": "^1.5.1",
    "sqlite": "^3.0.3",
    "sqlite3": "^4.1.0",
    "table": "^5.4.6",
    "turndown": "^5.0.3",
    "typeorm": "^0.2.19",
    "utility-types": "^3.8.0",
    "zlib-sync": "^0.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@favware/eslint-config": "^3.1.2",
    "@favware/ts-config": "^1.0.1",
    "@google-cloud/firestore": "^2.4.0",
    "@types/cheerio": "^0.22.13",
    "@types/common-tags": "^1.8.0",
    "@types/dotenv": "^6.1.1",
    "@types/fast-levenshtein": "^0.0.1",
    "@types/glob": "^7.1.1",
    "@types/jsonfile": "^5.0.0",
    "@types/libsodium-wrappers": "^0.7.5",
    "@types/module-alias": "^2.0.0",
    "@types/moment-duration-format": "^2.2.2",
    "@types/node": "^12.7.12",
    "@types/node-fetch": "^2.5.2",
    "@types/qrcode": "^1.3.4",
    "@types/sqlite3": "^3.1.5",
    "@types/table": "^4.0.7",
    "@types/turndown": "^5.0.0",
    "@types/ws": "^6.0.3",
    "@types/yargs-interactive": "^2.1.0",
    "chalk": "^2.4.2",
    "copyfiles": "^2.1.1",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.5.1",
    "esm": "^3.2.25",
    "glob": "^7.1.4",
    "husky": "^3.0.9",
    "jsonfile": "^5.0.0",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4",
    "yargs-interactive": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
